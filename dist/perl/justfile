# Transpile source to lib/parable.pl
transpile source_file transpiler_dir:
    uv run --directory "{{transpiler_dir}}" python -m src.tongues --target perl < "{{source_file}}" > lib/parable.pl

# Syntax check
check-syntax:
    perl -c lib/parable.pl

# Run tests
check source_file transpiler_dir tests_dir:
    just transpile "{{source_file}}" "{{transpiler_dir}}"
    perl -Ilib bin/run_tests "{{tests_dir}}"
