image := "parable-python"
transpiler_image := "parable-transpiler"

# Build the transpiler Docker image (code is mounted at runtime, not baked in)
[private]
docker-build-transpiler transpiler_dir:
    docker build -t {{transpiler_image}} "{{transpiler_dir}}"

# Build the Python Docker image
[private]
docker-build:
    docker build -t {{image}} .

# Transpile source to src/parable/parable.py (in Docker)
transpile source_file transpiler_dir: (docker-build-transpiler transpiler_dir)
    mkdir -p src/parable
    docker run --rm \
        -v "{{transpiler_dir}}:/transpiler:ro" \
        -v "{{source_file}}:/source.py:ro" \
        -v "{{justfile_directory()}}/src/parable:/output" \
        {{transpiler_image}} python /source.py /output/parable.py

# Build the project (in Docker)
build source_file transpiler_dir: (transpile source_file transpiler_dir) docker-build
    docker run --rm \
        -v "{{justfile_directory()}}:/workspace" \
        -w /workspace \
        {{image}} build

# Run tests (in Docker)
check source_file transpiler_dir tests_dir: (transpile source_file transpiler_dir) docker-build
    docker run --rm \
        -v "{{justfile_directory()}}:/workspace" \
        -v "{{tests_dir}}:/tests:ro" \
        -v "{{justfile_directory()}}/../../src/run_tests.py:/src/run_tests.py:ro" \
        -w /workspace \
        {{image}} check /tests
