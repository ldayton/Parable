{
  "name": "@ldayton/parable-ts",
  "version": "0.1.0",
  "description": "A bash parser that exactly matches bash's behavior (TypeScript)",
  "license": "MIT",
  "author": "Lily Dayton",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ldayton/Parable.git",
    "directory": "dist/typescript"
  },
  "homepage": "https://github.com/ldayton/Parable",
  "bugs": "https://github.com/ldayton/Parable/issues",
  "keywords": ["bash", "parser", "shell", "ast", "typescript"],
  "type": "commonjs",
  "main": "dist/parable.js",
  "types": "dist/parable.d.ts",
  "files": ["dist/"],
  "scripts": {
    "transpile": "uv run --directory \"$TRANSPILER_DIR\" python -m src.tongues --target typescript < \"$SOURCE_FILE\" > src/parable.ts",
    "build": "tsc",
    "check": "PARABLE_PATH=\"$(pwd)/dist\" node bin/run-tests.js \"$TESTS_DIR\""
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
