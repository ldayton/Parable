---
(until (list (command (word "cmd1")) (and) (command (word "cmd2"))) (command (word "echo") (word "waiting")))

# === Basic for loops ===

=== for with word list
for x in a b c; do echo $x; done
---
(for "x" (words "a" "b" "c") (command (word "echo") (word "$x" (param "x"))))

=== for with single word
for x in item; do echo $x; done
---
(for "x" (words "item") (command (word "echo") (word "$x" (param "x"))))

=== for with many words
for i in 1 2 3 4 5; do echo $i; done
---
(for "i" (words "1" "2" "3" "4" "5") (command (word "echo") (word "$i" (param "i"))))

=== for with quoted words
for f in "file one" "file two"; do cat "$f"; done
---
(for "f" (words "\"file one\"" "\"file two\"") (command (word "cat") (word "\"$f\"" (param "f"))))

=== for with single quoted words
for f in 'file one' 'file two'; do cat "$f"; done
---
(for "f" (words "'file one'" "'file two'") (command (word "cat") (word "\"$f\"" (param "f"))))

=== for with glob pattern
for f in *.txt; do cat $f; done
---
(for "f" (words "*.txt") (command (word "cat") (word "$f" (param "f"))))

=== for with multiple globs
for f in *.txt *.md; do cat $f; done
---
(for "f" (words "*.txt" "*.md") (command (word "cat") (word "$f" (param "f"))))

=== for with question mark glob
for f in file?.txt; do cat $f; done
---
(for "f" (words "file?.txt") (command (word "cat") (word "$f" (param "f"))))

=== for with bracket glob
for f in file[0-9].txt; do cat $f; done
---
(for "f" (words "file[0-9].txt") (command (word "cat") (word "$f" (param "f"))))

=== for with variable expansion
for x in $items; do echo $x; done
---
(for "x" (words "$items") (command (word "echo") (word "$x" (param "x"))))

=== for with array expansion
for x in "${array[@]}"; do echo $x; done
---
(for "x" (words "\"${array[@]}\"") (command (word "echo") (word "$x" (param "x"))))

=== for without in clause
for x; do echo $x; done
---
(for "x" (command (word "echo") (word "$x" (param "x"))))

=== for with multiple body commands
for x in a b; do echo start; echo $x; echo end; done
---
(for "x" (words "a" "b") (list (command (word "echo") (word "start")) (semi) (command (word "echo") (word "$x" (param "x"))) (semi) (command (word "echo") (word "end"))))

