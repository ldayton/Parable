# === Loops in pipelines and lists ===

=== while in pipeline
while read line; do echo $line; done | cat
---
(pipeline (while (command (word "read") (word "line")) (command (word "echo") (word "$line" (param "line")))) (command (word "cat")))

=== for in pipeline
for x in a b c; do echo $x; done | wc -l
---
(pipeline (for "x" (words "a" "b" "c") (command (word "echo") (word "$x" (param "x")))) (command (word "wc") (word "-l")))

=== while in and list
while true; do echo yes; break; done && echo done
---
(list (while (command (word "true")) (list (command (word "echo") (word "yes")) (semi) (command (word "break")))) (and) (command (word "echo") (word "done")))

=== while in or list
while false; do echo no; done || echo fallback
---
(list (while (command (word "false")) (command (word "echo") (word "no"))) (or) (command (word "echo") (word "fallback")))

=== for in background
for x in a b c; do echo $x; done &
---
(list (for "x" (words "a" "b" "c") (command (word "echo") (word "$x" (param "x")))) (bg))

=== multiple loops in sequence
for x in a; do echo $x; done; for y in b; do echo $y; done
---
(list (for "x" (words "a") (command (word "echo") (word "$x" (param "x")))) (semi) (for "y" (words "b") (command (word "echo") (word "$y" (param "y")))))

=== loop in middle of pipeline
echo input | while read x; do echo $x; done | cat
---
(pipeline (command (word "echo") (word "input")) (while (command (word "read") (word "x")) (command (word "echo") (word "$x" (param "x")))) (command (word "cat")))

=== multiple loops in pipeline
for x in a; do echo $x; done | while read y; do echo $y; done
---
(pipeline (for "x" (words "a") (command (word "echo") (word "$x" (param "x")))) (while (command (word "read") (word "y")) (command (word "echo") (word "$y" (param "y")))))

=== loop after command in sequence
echo before; while true; do echo loop; break; done
---
(list (command (word "echo") (word "before")) (semi) (while (command (word "true")) (list (command (word "echo") (word "loop")) (semi) (command (word "break")))))

