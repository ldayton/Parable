---
(case (word "$x" (param "x")) (pattern "a|b" (command (word "echo") (word "match"))))

=== case with multiple or patterns
case $x in a|b|c) echo match;; esac
---
(case (word "$x" (param "x")) (pattern "a|b|c" (command (word "echo") (word "match"))))

=== case with glob or pattern
case $x in *.txt|*.md) echo doc;; esac
---
(case (word "$x" (param "x")) (pattern "*.txt|*.md" (command (word "echo") (word "doc"))))

=== case with quoted pattern
case $x in "hello") echo hi;; esac
---
(case (word "$x" (param "x")) (pattern "\"hello\"" (command (word "echo") (word "hi"))))

=== case with single quoted pattern
case $x in 'hello') echo hi;; esac
---
(case (word "$x" (param "x")) (pattern "'hello'" (command (word "echo") (word "hi"))))

=== case with empty body
case $x in a) ;; esac
---
(case (word "$x" (param "x")) (pattern "a"))

=== case with colon body
case $x in a) :;; esac
---
(case (word "$x" (param "x")) (pattern "a" (command (word ":"))))

=== case with true body
case $x in a) true;; esac
---
(case (word "$x" (param "x")) (pattern "a" (command (word "true"))))

=== case with multiple commands
case $x in a) echo start; echo end;; esac
---
(case (word "$x" (param "x")) (pattern "a" (list (command (word "echo") (word "start")) (semi) (command (word "echo") (word "end")))))

=== case with pipeline in body
